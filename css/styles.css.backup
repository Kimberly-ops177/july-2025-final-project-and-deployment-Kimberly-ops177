}

.form-message {
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    display: none;
    align-items: center;
    gap: var(--spacing-sm);
}

.form-message.show {
    display: flex;
}

.success-message {
    background-color: #d1fae5;
    color: #065f46;
}

.error-message-box {
    background-color: #fee2e2;
    color: #991b1b;
}

.btn-submit {
    position: relative;
}

.btn-loading {
    display: none;
}

.btn.loading .btn-text {
    display: none;
}

.btn.loading .btn-loading {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

